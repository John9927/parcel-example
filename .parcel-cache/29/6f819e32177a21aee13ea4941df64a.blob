div#main {
  display: flex;
  flex-direction: column;
}

li {
  display: flex;
  list-style-type: none;
}

div#card {
  grid-template-columns: 300px;
  grid-template-rows: 120px 692px 168px;
  grid-template-areas: "image" "text" "stats";
  background: white;
  font-family: roboto;
  text-align: center;
}