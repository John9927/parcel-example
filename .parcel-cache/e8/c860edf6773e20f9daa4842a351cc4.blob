div#main {
  display: flex;
  flex-direction: column;
}

li {
  display: flex;
  list-style-type: none;
}

div#card {
  display: block;
  width: 14.05%;
  float: left;
  margin-left: 24px;
  height: 350px;
}

div#card_text {
  background: #ddd6d6;
  display: flex;
  flex-direction: column;
  border-bottom-right-radius: 10px;
  border-bottom-left-radius: 10px;
  padding: 5px;
  margin-top: -3px;
  margin-bottom: 5px;
}

img#img {
  border-top-right-radius: 10px;
  border-top-left-radius: 10px;
}