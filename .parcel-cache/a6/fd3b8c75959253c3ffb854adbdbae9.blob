div#main {
  display: flex;
  flex-direction: column;
}

li {
  display: flex;
  list-style-type: none;
}

div#card {
  display: flex;
  flex-direction: column;
  width: 37.5%;
}

div#card_text {
  background: red;
  display: flex;
  flex-direction: column;
  border-bottom-right-radius: 10px;
  border-bottom-left-radius: 10px;
  padding: 5px;
}

div#card_image:hover {
  box-shadow: 5px 5px 15px rgba(0, 0, 0, 0.6);
}