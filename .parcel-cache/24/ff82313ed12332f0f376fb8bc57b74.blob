div#main {
  display: flex;
  flex-direction: column;
}

li {
  display: flex;
  list-style-type: none;
}

div#card {
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
  width: 30%;
  margin: auto;
  border: 1px solid red;
}

div#card_text {
  display: flex;
  position: relative;
  flex-direction: column;
  justify-content: center;
  width: 100%;
  margin: auto;
  border: 1px solid red;
}