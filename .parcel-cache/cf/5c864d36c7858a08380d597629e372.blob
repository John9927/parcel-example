"use strict";

require("./styles.scss");

require("./reset.scss");

var _navigo = _interopRequireDefault(require("navigo"));

function _interopRequireDefault(obj) { return obj && obj.__esModule ? obj : { default: obj }; }

window.addEventListener("load", () => {
  const router = new _navigo.default("/");

  const render = main => document.querySelector("#main").innerHTML = main;

  router.on(() => {
    render(
    /*html*/
    `
      <section>
        <img class="images" src="https://dummyimage.com/1024x300/000/fff&text=Immagine+1" style="width:100%">
        <img class="images" src="https://dummyimage.com/1024x300/000/fff&text=Immagine+2" style="width:100%">
        <img class="images" src="https://dummyimage.com/1024x300/000/fff&text=Immagine+3" style="width:100%">
      </section>
      `);
  }).on({
    "/about": {
      as: "about",
      uses: function (match) {
        render(`About`);
      }
    },
    "/login": {
      as: "login",
      uses: function (match) {
        render(
        /*html*/
        ` 
              <input type="text" name="username" placeholder="Inserisci Username"/>  
              <input type="password" name="pass" placeholder="Inserisci Password" />  
              <input type="submit" name="login"/>  
            `);
      }
    }
  }).resolve();
  var myIndex = 0;

  function carousel() {
    var i;
    var x = document.getElementsByClassName("mySlides");

    for (i = 0; i < x.length; i++) {
      x[i].style.display = "none";
    }

    myIndex++;

    if (myIndex > x.length) {
      myIndex = 1;
    }

    x[myIndex - 1].style.display = "block";
    setTimeout(carousel, 3000);
  }
});